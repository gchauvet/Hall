<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>io.zatarox.hall</groupId>
        <artifactId>hall-natives</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.zatarox.hall.hall-natives</groupId>
    <artifactId>phobos</artifactId>
    <packaging>pom</packaging>
    <name>Hall Phobos frontend</name>
    <description>Hall Windows native frontend program</description>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>cmake</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>cmake</executable>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                            <arguments>
                                <argument>-G</argument>
                                <argument>MinGW Makefiles</argument>
                                <argument>-DCMAKE_TOOLCHAIN_FILE=${cmake.toolchain.path}/${hall.arch}.cmake</argument>
                                <argument>-DCMAKE_BUILD_TYPE=MINSIZEREL</argument>
                                <argument>${basedir}/src/main</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>make</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>make</executable>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                            <arguments>
                                <argument>CFLAGS+=-DPRG_VERSION_MAJOR=${parsedVersion.majorVersion}</argument>
                                <argument>CFLAGS+=-DPRG_VERSION_MINOR=${parsedVersion.minorVersion}</argument>
                                <argument>CFLAGS+=-DPRG_VERSION_PATCH=${parsedVersion.incrementalVersion}</argument>
                                <argument>install/strip</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>io.zatarox.hall.natives</groupId>
                            <artifactId>${project.artifactId}</artifactId>
                            <file>target/phobos.exe</file>
                            <version>${project.version}</version>
                            <packaging>exe</packaging>
                            <classifier>${hall.arch}</classifier>
                            <createChecksum>true</createChecksum>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>from-linux-for-linux</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <cmake.toolchain.path>${basedir}/../src/cmake/linux</cmake.toolchain.path>
            </properties>
        </profile>
        <profile>
            <id>from-windows-for-windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <cmake.toolchain.path>${basedir}/../src/cmake/windows</cmake.toolchain.path>
            </properties>
        </profile>
    </profiles>
</project>
